<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
        android:layout_width="match_parent"
	android:layout_height="match_parent" >
    <LinearLayout android:id="@+id/layout_application"
	android:orientation="horizontal" 
        android:layout_width="match_parent"
	android:layout_height="wrap_content" >
        
        <ImageView android:id="@+id/icon"
        android:layout_width="60dp"
	android:layout_height="60dp"
        android:padding="10dp"/>
        
        <LinearLayout
	android:orientation="vertical" 
        android:layout_width="match_parent"
	android:layout_height="wrap_content" >
            
            <TextView android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="2dp"/>
            <TextView android:id="@+id/package_name"
            android:textSize="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            <TextView android:id="@+id/version"
            android:textSize="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
	android:orientation="horizontal" 
        android:layout_width="match_parent"
	android:layout_height="wrap_content" >
            <Button android:id="@+id/button_open"
                android:layout_width="150dp"
		android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/button_open" />
            <Button android:id="@+id/button_uninstall"
                android:layout_width="150dp"
		android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/button_uninstall" />            
            
    </LinearLayout>

    <TextView android:id="@+id/message_no_application"
        android:layout_width="match_parent"
	android:layout_height="match_parent"
        android:text="" />

    <ExpandableListView android:id="@+id/permissions_list"
        android:layout_width="match_parent"
	android:layout_height="wrap_content"
        android:groupIndicator="@null"/>

    <LinearLayout android:id="@+id/layout_no_permission"
	android:orientation="vertical" 
        android:layout_width="match_parent"
	android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" >
        
        <TextView  
            android:text="@string/no_permission_message"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <Button android:id="@+id/button_market"
            android:padding="20dp"
            android:text="@string/button_market"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        
    </LinearLayout>

</LinearLayout>